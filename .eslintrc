{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "quotes": ["error", "double"]
    },
    "settings": {
        "react": {
          "version": "detect"
        }
      }
}
